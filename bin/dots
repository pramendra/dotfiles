#!/usr/bin/env bash
set -euo pipefail

cmd="${1:-help}"
case "$cmd" in
    link)
        echo "Creating config directories..."
        mkdir -p "$HOME/.config/zsh/.config/starship"
        
        echo "Linking configurations..."
        stow --verbose --target="$HOME" zsh
        ;;
    unlink)
        stow --delete --verbose --target="$HOME" zsh
        ;;
    *)
        echo "Usage: dots {link|unlink}"
        ;;
esac