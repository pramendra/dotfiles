#!/usr/bin/env bash
set -euo pipefail

cmd="${1:-help}"
case "$cmd" in
    link)
        # Create zsh config directory
        mkdir -p "$HOME/.config/zsh"
        # Link zsh configurations
        stow -v -t "$HOME" zsh
        ;;
    unlink)
        stow -Dv -t "$HOME" zsh
        ;;
    help|*)
        echo "Usage: dots {link|unlink}"
        ;;
esac