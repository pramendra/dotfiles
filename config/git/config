[user]
	name = Pramendra Gupta
	email = pramendra@gmail.com

[github]
	user = pramendra

[core]
	excludesfile = ~/.config/git/ignore
	editor = code --wait
	filemode = false
	trustctime = false
	autocrlf = input
	untrackedCache = true
	pager = diff-so-fancy | less --tabs=4 -RFX
	ignorecase = false

[credential]
	helper = osxkeychain

[init]
	defaultBranch = main

[push]
	default = current
	followTags = true
	autoSetupRemote = true

[pull]
	rebase = true

[fetch]
	prune = true

[rebase]
	autoStash = true

[merge]
	conflictstyle = diff3

[diff]
	renames = copies
	algorithm = histogram
	tool = vscode

[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE

[mergetool "vscode"]
	cmd = code --wait $MERGED

[alias]
	a = add
	aa = add -A
	b = branch
	c = commit -v
	cm = commit -m
	co = checkout
	cb = checkout -b
	d = diff
	ds = diff --staged
	l = log --oneline -20
	lg = log --graph --oneline --all
	p = push
	pf = push --force-with-lease
	pl = pull
	s = status -sb
	undo = reset HEAD~1 --soft
	amend = commit --amend --no-edit
	wip = !git add -A && git commit -m 'wip'

[color]
	ui = auto

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[help]
	autocorrect = 1
